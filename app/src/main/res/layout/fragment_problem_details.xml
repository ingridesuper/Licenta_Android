<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="20dp"
        android:paddingBottom="90dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".problem.ProblemDetailsFragment">

        <TextView
            android:id="@+id/tvProblemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_bold"
            android:textSize="21dp"
            android:text="This is the problem's title" />

        <TextView
            android:id="@+id/tvProblemAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reported by: Nume Autor"
            android:textSize="12dp" />

        <!--aici e zona de poze-->

        <TextView
            android:id="@+id/tvProblemDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is the description of the problem." />

        <TextView
            android:id="@+id/tvProblemCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category: category"/>

        <TextView
            android:id="@+id/tvProblemAddressSector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adresa, Sector sector"/>

        <!--map fragment here-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close"/>

        </LinearLayout>


    </LinearLayout>



</ScrollView>