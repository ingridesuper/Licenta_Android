<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".problem.ProblemDetailsFragment">

        <TextView
            android:id="@+id/tvProblemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_bold"
            android:textSize="21sp"
            android:text="This is the problem's title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvReportedByAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reported by: "
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvProblemAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4286F4"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvNrSemnaturi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Număr semnături: "
            android:layout_marginTop="8dp"
            android:textSize="12sp"/>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="10sp"
            android:id="@+id/recyclerViewPictures"
            app:layoutManager="com.google.android.material.carousel.CarouselLayoutManager"/>


        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/tvProblemDescription"
            android:layout_marginBottom="8dp"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is the description of the problem." />

        <TextView
            android:id="@+id/tvProblemCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"
            android:textSize="11sp"
            android:text="Category: category" />

        <TextView
            android:id="@+id/tvProblemAddressSector"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textSize="11sp"
            android:layout_height="wrap_content"
            android:text="Adresa, Sector sector" />

        <fragment
            android:id="@+id/map"
            app:layout_constraintStart_toStartOf="parent"
            android:name="com.example.licentaagain.views.WorkaroundMapFragment"
            android:layout_width="match_parent"
            android:layout_height="400dp" />
        <Button
            android:id="@+id/btnOpenInGoogleMaps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open in Google Maps"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:iconSize="14dp"
            app:iconTint="@null"
            style="@style/Widget.Material3.Button.TextButton.Icon"
            app:icon="@drawable/ic_google_maps"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="120dp"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/btnClose"
                style="@style/Widget.Material3.Button.TextButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:backgroundTint="@color/primaryPurple"
                android:checkable="true"
                android:text="@string/sign_problem"
                android:textAlignment="viewEnd"
                android:textSize="11sp"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                app:iconTint="@color/white"
                app:strokeColor="@color/primaryPurple"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnClose"
                app:strokeWidth="2dp"
                app:iconSize="18dp"
                app:iconPadding="8dp"
                app:icon="@drawable/ic_sign"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSigned"
                style="@style/ThemeOverlay.Material3.Button.ElevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:layout_marginEnd="12dp"
                android:checkable="true"
                android:paddingRight="13dp"
                android:paddingLeft="18dp"
                android:text="@string/signed"
                android:textAlignment="viewEnd"
                android:textColor="@color/primaryPurple"
                android:textSize="12sp"
                app:icon="@drawable/ic_signed"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnClose"
                app:iconGravity="end"
                app:iconPadding="15dp"
                app:iconSize="18dp"
                app:iconTint="@color/primaryPurple"
                app:strokeColor="@color/white"
                app:strokeWidth="2dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</ScrollView>