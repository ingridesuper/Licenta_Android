<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".problem.AddProblemFragment">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tvHeading"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:text="Add a problem!" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tfTitle"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:startIconContentDescription="Enter your email"
        app:endIconMode="clear_text"
        android:hint="@string/title"
        app:errorEnabled="true"
        app:cursorColor="@color/primaryPurple">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tfDescription"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tfTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:startIconContentDescription="Enter your email"
        app:endIconMode="clear_text"
        android:hint="@string/description"
        app:errorEnabled="true"
        app:cursorColor="@color/primaryPurple">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <fragment
        android:id="@+id/autocomplete_fragment"
        app:layout_constraintTop_toBottomOf="@+id/tfDescription"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <fragment
        android:id="@+id/map"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/autocomplete_fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/map"/>

</androidx.constraintlayout.widget.ConstraintLayout>