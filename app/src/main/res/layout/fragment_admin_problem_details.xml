<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".admin.problems.AdminProblemDetailsFragment">

        <TextView
            android:id="@+id/tvProblemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_bold"
            android:textSize="21sp"
            android:text="This is the problem's title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvReportedByAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reported by: "
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvProblemAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4286F4"
                android:textSize="13sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvStareProblema"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stare problemă: "
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tvNrSemnaturi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Număr semnături: "
            android:layout_marginTop="8dp"
            android:textSize="12sp"/>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="10sp"
            android:id="@+id/recyclerViewPictures"
            app:layoutManager="com.google.android.material.carousel.CarouselLayoutManager"/>


        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/tvProblemDescription"
            android:layout_marginBottom="8dp"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is the description of the problem." />

        <TextView
            android:id="@+id/tvProblemCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"
            android:textSize="11sp"
            android:text="Category: category" />

        <TextView
            android:id="@+id/tvProblemAddressSector"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textSize="11sp"
            android:layout_height="wrap_content"
            android:text="Adresa, Sector sector" />

        <fragment
            android:id="@+id/map"
            app:layout_constraintStart_toStartOf="parent"
            android:name="com.example.licentaagain.views.WorkaroundMapFragment"
            android:layout_width="match_parent"
            android:layout_height="400dp" />
        <Button
            android:id="@+id/btnOpenInGoogleMaps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open in Google Maps"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:iconSize="14dp"
            app:iconTint="@null"
            style="@style/Widget.Material3.Button.TextButton.Icon"
            app:icon="@drawable/ic_google_maps"/>

        <TextView
            android:id="@+id/tvFacebookLink"
            android:text="Link grup Facebook: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="120dp">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Șterge"
                android:textSize="11sp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                app:icon="@drawable/ic_close"
                app:iconSize="18dp"
                app:iconPadding="8dp"
                app:layout_constraintEnd_toStartOf="@id/btnEdit"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editează"
                android:textSize="11sp"
                app:icon="@drawable/ic_edit"
                app:iconSize="18dp"
                app:iconPadding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnClose"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Close"/>

    </LinearLayout>

</ScrollView>