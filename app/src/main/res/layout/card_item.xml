<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/cardView"
    style="?attr/materialCardViewElevatedStyle"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/map"
    android:layout_margin="15dp"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    app:shapeAppearance="?attr/shapeAppearanceCornerMedium"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivProblem"
            app:shapeAppearance="@style/customrounded"
            android:layout_width="0dp"
            android:layout_weight=".40"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_add" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:layout_width="0dp"
            android:layout_weight="0.60"
            android:layout_height="match_parent">

            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="16sp"
                android:fontFamily="@font/manrope_bold"
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is the Title" />

            <TextView
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adresa, Sector"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categorie: Gunoi"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAddress" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:backgroundTint="@color/primaryPurple"
                android:checkable="true"
                android:text="@string/sign_problem"
                android:textAlignment="viewEnd"
                android:textSize="11sp"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                app:iconTint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:strokeColor="@color/primaryPurple"
                app:strokeWidth="2dp"
                app:iconSize="18dp"
                app:iconPadding="8dp"
                app:icon="@drawable/ic_sign"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSigned"
                style="@style/ThemeOverlay.Material3.Button.ElevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:layout_marginEnd="12dp"
                android:checkable="true"
                android:paddingRight="13dp"
                android:paddingLeft="18dp"
                android:text="@string/signed"
                android:textAlignment="viewEnd"
                android:textColor="@color/primaryPurple"
                android:textSize="12sp"
                app:icon="@drawable/ic_signed"
                app:iconGravity="end"
                app:iconPadding="15dp"
                app:iconSize="18dp"
                app:iconTint="@color/primaryPurple"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:strokeColor="@color/white"
                app:strokeWidth="2dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>