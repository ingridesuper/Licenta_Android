<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvSortHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort by"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/manrope_bold"
        android:textSize="21dp"
    />

    <RadioGroup
        android:id="@+id/rgSort"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSortHeading"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbNewest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="Newest" />

        <RadioButton
            android:id="@+id/rbOldest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oldest" />

    </RadioGroup>

    <TextView
        android:layout_marginTop="18dp"
        android:id="@+id/tvFilterHeading"
        android:text="Filter by"
        android:fontFamily="@font/manrope_bold"
        android:textSize="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rgSort"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tvSectorSubheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvFilterHeading"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Sector"
        android:fontFamily="@font/manrope_bold"
        android:textSize="17dp"
        android:layout_marginTop="8dp"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupSector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSectorSubheading"/>

    <TextView
        android:id="@+id/tvCategorySubheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/chipGroupSector"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Categorie"
        android:fontFamily="@font/manrope_bold"
        android:textSize="17dp"
        android:layout_marginTop="8dp"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCategorySubheading"/>


    <!--
    sort idei:
    - recommended for you
    - around you

    filter idei:
    - dupa categorie
    - dupa zona -> buton gen: near you
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/chipGroupCategory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/btnClearFilters"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chipGroupCategory"
            android:text="Clear"/>

        <Button
            style="@style/Widget.Material3.Button"
            android:layout_marginStart="30dp"
            android:id="@+id/btnApply"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/btnClearFilters"
            app:layout_constraintTop_toBottomOf="@+id/chipGroupCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>