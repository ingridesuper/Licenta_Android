<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".account.reported_problems.MyReportedProblemsFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <TextView
           android:id="@+id/tvHeadingGatheringSignatures"
           android:text="@string/problems_gathering_signatures"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           android:layout_marginStart="20dp"
           android:textSize="16dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:fontFamily="@font/manrope_bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvProblemsGatheringSignatures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvHeadingGatheringSignatures"
            app:layout_constraintStart_toStartOf="parent"
            android:scrollbars="vertical"
            android:paddingBottom="50dp"/>

        <TextView
            android:id="@+id/tvHeadingSentProblems"
            android:text="@string/problems_sent_to_authorities"
            android:layout_marginStart="20dp"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/rvProblems"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvProblemsSent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvHeadingSentProblems"
            app:layout_constraintStart_toStartOf="parent"
            android:scrollbars="vertical"
            android:paddingBottom="150dp"/>

    </LinearLayout>

</ScrollView>