<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".account.TopProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/circle_background"
            android:padding="10dp"
            android:src="@drawable/ic_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profileTabBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toBottomOf="@id/ivProfile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <View
                android:id="@+id/indicatorMyProblems"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/darkGray"
                app:layout_constraintBottom_toTopOf="@id/btnMyProblems"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/btnMyProblems"
                app:layout_constraintEnd_toEndOf="@id/btnMyProblems" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMyProblems"
                app:iconGravity="textTop"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:layout_width="0dp"
                app:layout_constraintHorizontal_weight="0.9"
                android:layout_height="wrap_content"
                android:text="@string/your_reports"
                app:iconTint="@color/darkGray"
                android:textColor="@color/darkGray"
                app:icon="@drawable/ic_problem_file"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                app:layout_constraintTop_toBottomOf="@id/indicatorMyProblems"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnMySolvedProblems" />

            <View
                android:id="@+id/indicatorMySolvedProblems"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toTopOf="@id/btnMySolvedProblems"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/btnMySolvedProblems"
                app:layout_constraintEnd_toEndOf="@id/btnMySolvedProblems" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMySolvedProblems"
                app:iconGravity="textTop"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                app:layout_constraintHorizontal_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/solved"
                app:iconTint="@color/darkGray"
                android:textColor="@color/darkGray"
                app:icon="@drawable/ic_solved_problem_check"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                app:layout_constraintTop_toBottomOf="@id/indicatorMySolvedProblems"
                app:layout_constraintStart_toEndOf="@id/btnMyProblems"
                app:layout_constraintEnd_toStartOf="@id/btnMySignatures" />

            <View
                android:id="@+id/indicatorMySignatures"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toTopOf="@id/btnMySignatures"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/btnMySignatures"
                app:layout_constraintEnd_toEndOf="@id/btnMySignatures" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMySignatures"
                app:iconGravity="textTop"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                app:layout_constraintHorizontal_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/your_signatures"
                app:iconTint="@color/darkGray"
                android:textColor="@color/darkGray"
                app:icon="@drawable/ic_sign"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                app:layout_constraintTop_toBottomOf="@id/indicatorMySignatures"
                app:layout_constraintStart_toEndOf="@id/btnMySolvedProblems"
                app:layout_constraintEnd_toStartOf="@id/btnMyAccountSettings" />

            <View
                android:id="@+id/indicatorAccount"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toTopOf="@id/btnMyAccountSettings"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/btnMyAccountSettings"
                app:layout_constraintEnd_toEndOf="@id/btnMyAccountSettings" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMyAccountSettings"
                app:iconGravity="textTop"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/account"
                app:layout_constraintHorizontal_weight="0.8"
                app:iconTint="@color/darkGray"
                android:textColor="@color/darkGray"
                app:icon="@drawable/ic_settings"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                app:layout_constraintTop_toBottomOf="@id/indicatorAccount"
                app:layout_constraintStart_toEndOf="@id/btnMySignatures"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainer"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/profileTabBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
